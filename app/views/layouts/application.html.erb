<!DOCTYPE html>
<html>
<head>
  <title>Diaspora*x <%= (t = yield(:title).present?) ? " :: #{t}" : "" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery','jquery-ui', 'rails','application' %>
  <%= csrf_meta_tag %>
</head>
<body>
    <div id='notification'></div> 

    <div class='header'>
      <div class="container_12">
        <div class="grid_5">
          <h1><a href="/">DIASPORA*</a> <span class='sub_text'>X</span></h1>
        </div>

        <% if current_user %>
          <div class="grid_2 prefix_4">
            <div class="auth">
              <%= image_tag 'avatar.png', :class => 'micro avatar' %>
              <%= link_to current_user.name, '/users/edit' %>
            
              <%= link_to 'Log out', '/users/sign_out', :title => "Sign out", :class => 'signout' %>
            </div>
          </div>
        <% end %>
        
        <div class="clear"></div>
        
        <ul class="tabs">
          <% if current_user%>
            <li class="active"><%= link_to "News Feed", root_url %></li>
          <% end %>
          <li class="right"><%= link_to "Github", "http://github.com/bnolan/diaspora-x" %></li>
        </ul>
          
      </div>
    </div>
    
    <div class='container_12'>
      <% if flash[:message]%>
        <div class="flash">
          <%= image_tag 'icons/star_fav_empty.png', :class => 'icon' %>
          <%= flash[:message] %>.
        </div>
      <% end %>
      
      <%= yield %>

      <div class='clear'></div> 
    </div> 
    
